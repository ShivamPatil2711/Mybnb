<%- include("../partials/head") %>
<%- include("../partials/nav") %>

<!-- Include Tailwind CSS from CDN -->
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

<!-- Include Toastify CSS and JS from CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
<script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
<body class="font-sans" style="font-family: 'Inter', sans-serif;">  


<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% favouriteHomes.forEach((home) => { %>
      <div class="bg-white rounded-lg shadow-md border  flex flex-col items-center p-5 transition duration-300 hover:-translate-y-1 hover:shadow-lg ">
        <img 
          src="https://www.cvent.com/sites/default/files/image/2021-08/exterior%20view%20of%20the%20sign%20at%20the%20front%20of%20a%20hotel.jpg" 
          alt="Home Image"
          class="w-full h-48 sm:h-56 object-cover rounded-md mb-4 border-b-2 border-red-500"
        >
        <div class="text-red-700 text-sm sm:text-base w-full space-y-2">
          <p><span class="font-semibold">Housename:</span> <%= home.housename %></p>
          <p><span class="font-semibold">Location:</span> <%= home.location %></p>
          <p><span class="font-semibold">Price:</span> ₹<%= home.price %></p>
          <div class="flex items-center">
            <span class="text-red-500 mr-1">★</span>
            <span><%= home.rate %>/5</span>
          </div>
        </div>
        <div class="flex justify-between items-center w-full mt-4 gap-3">
          <button 
            class="bg-red-500 text-white px-3 py-1.5 rounded-md font-medium text-sm sm:text-base hover:bg-red-600 transition-colors duration-200 flex-1 text-center"
            onclick="Toastify({
              text: 'Booking initiated for <%= home.housename %>!',
              duration: 3000,
              gravity: 'bottom',
              position: 'right',
              backgroundColor: '#EF4444',
              stopOnFocus: true,
            }).showToast();"
          >
            Book Now
          </button>
          <form action="/deletefavourite/<%= home._id %>" method="post" class="flex-1">
            <button 
              type="submit"
              class="bg-red-700 text-white px-3 py-1.5 rounded-md font-medium text-sm sm:text-base hover:bg-red-800 transition-colors duration-200 w-full text-center"
              onclick="Toastify({
                text: '<%= home.housename %> removed from favourites!',
                duration: 3000,
                gravity: 'bottom',
                position: 'right',
                backgroundColor: '#EF4444',
                stopOnFocus: true,
              }).showToast();"
            >
              Remove
            </button>
          </form>
        </div>
      </div>
    <% }) %>
  </div>
</div>

</body>
</html>