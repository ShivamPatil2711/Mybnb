<%- include("../partials/head") %>
<%- include("../partials/nav") %>

<!-- Include Tailwind CSS from CDN -->
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

<!-- Include Toastify CSS and JS from CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
<script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

<body >  

<div class="max-w-xl mx-auto px-4 sm:px-6 py-6">
  <div class="bg-white rounded-lg shadow-md border border-red-100 p-4 sm:p-6 transition duration-300 hover:shadow-lg hover:border-red-300">
    <img 
      src="https://www.cvent.com/sites/default/files/image/2021-08/exterior%20view%20of%20the%20sign%20at%20the%20front%20of%20a%20hotel.jpg" 
      alt="Home image"
      class="w-full h-48 sm:h-56 object-cover rounded-md mb-4 border-b-2 border-red-500"
    >
    <div class="text-red-700 text-sm sm:text-base space-y-2 ">
      <p><span class="font-semibold">Housename:</span> <%= home.housename %></p>
      <p><span class="font-semibold">Location:</span> <%= home.location %></p>
      <p><span class="font-semibold">Price:</span> â‚¹<%= home.price %></p>
      <p><span class="font-semibold">Description:</span> <%= home.des %></p>
    </div>
    <div class="mt-4 flex justify-between items-center gap-4">
      <button 
        class="bg-red-500 text-white px-3 py-1.5 rounded-md font-medium text-sm sm:text-base hover:bg-red-600 transition-colors duration-200"
        onclick="Toastify({
          text: 'Booking initiated for <%= home.housename %>!',
          duration: 3000,
          gravity: 'bottom',
          position: 'right',
          backgroundColor: '#EF4444',
          stopOnFocus: true,
        }).showToast();"
      >
        Book Now
      </button>
    </div>
  </div>
</div>

</body>
</html>