<%-include("../partials/head")%>
<%- include("../partials/nav")%>
<body class="font-sans" style="font-family: 'Inter', sans-serif;">  
<div class="flex items-center justify-center min-h-screen bg-gray-50">
  <div class="bg-white p-8 rounded-2xl shadow-2xl w-full max-w-md text-center border border-red-100 mt-5 ">
    <h1 class="text-2xl font-bold text-red-600 mb-6">
      <%= editing ? "Edit Your Home" : "Register Your Home" %>
    </h1>
    <form action="<%= editing ? '/host/edithome' : '/host/airbnb-home' %>" method="POST" class="space-y-4 text-left">
      <input type="hidden" name="id" value="<%= editing ? home._id : "" %>">

      <label for="housename" class="block font-semibold text-red-700 mb-1">Housename:</label>
      <input
        type="text"
        id="housename"
        name="housename"
        placeholder="Enter your name"
        value="<%= editing ? home.housename : "" %>"
        required
        class="w-full px-4 py-2 border border-red-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 transition"
      >

      <label for="location" class="block font-semibold text-red-700 mb-1">Location:</label>
      <input
        type="text"
        id="location"
        name="location"
        placeholder="Enter Location"
        value="<%= editing ? home.location : "" %>"
        required
        class="w-full px-4 py-2 border border-red-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 transition"
      >

      <label for="price" class="block font-semibold text-red-700 mb-1">Price:</label>
      <input
        type="number"
        id="price"
        name="price"
        placeholder="Enter price"
        value="<%= editing ? home.price : "" %>"
        required
        class="w-full px-4 py-2 border border-red-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 transition"
      >

      <label for="rate" class="block font-semibold text-red-700 mb-1">Rating:</label>
      <input
        type="number"
        id="rate"
        name="rate"
        placeholder="Enter rating (0-5)"
        min="0"
        max="5"
        step="0.1"
        value="<%= editing ? home.rate : "" %>"
        required
        class="w-full px-4 py-2 border border-red-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 transition"
      >

      <label for="des" class="block font-semibold text-red-700 mb-1">Description:</label>
      <textarea
        id="des"
        name="des"
        placeholder="Enter Description"
        class="w-full px-4 py-2 border border-red-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 transition min-h-[80px] resize-y"
      ><%= editing ? home.description : "" %></textarea>

      <button
        type="submit"
        class="w-full py-2 bg-red-500 hover:bg-red-700 text-white rounded-lg font-semibold transition mt-2"
      >
        <%= editing ? "Edit Home" : "Submit" %>
      </button>
    </form>
  </div>
</div>
</body>
</html>