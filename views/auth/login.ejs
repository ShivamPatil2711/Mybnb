<%- include("../partials/nav")%>

<!-- Toastify CSS & JS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
<script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

<!-- Centering Container -->
<div class="flex items-center justify-center  ">
  <div class="bg-white p-8 rounded-2xl shadow-2xl w-full  max-w-xs text-center border mt-20 hover:-translate-y-1 hover:shadow-xl flex flex-col">
    <form method="post" action="/login-page" id="loginForm" class="space-y-4">
      <input 
        type="text" 
        name="email" 
        placeholder="Enter Email " 
        required 
        class="w-full px-4 py-2 border border-red-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 transition"
      >
      <input 
        type="password" 
        name="password" 
        placeholder="Enter password" 
        required 
        class="w-full px-4 py-2 border border-red-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 transition"
      >
      <% if(isLoggedIn) { %>
        <button 
          type="submit" 
          value="logout"
          class="w-full py-2 bg-red-500 hover:bg-red-700 text-white rounded-lg font-semibold transition"
          onclick="showToast('Logged out successfully!')"
        >Logout</button>
        <input type="hidden" name="log" value="out">
      <% } else { %>
        <button 
          type="submit" 
          value="login"
          class="w-full py-2 bg-green-500 hover:bg-green-700 text-white rounded-lg font-semibold transition"
          onclick="showToast('Logged in successfully!')"
        >Login</button>
        <input type="hidden" name="log" value="in">
      <% } %>
    </form>
  </div>
</div>

